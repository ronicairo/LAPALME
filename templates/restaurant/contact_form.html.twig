{% extends 'base.html.twig' %}

{% block title %}Contact - La Palme
{% endblock %}

{% block body %}

<h1 class="text-center mt-2">Contactez-nous</h1>

	<div class="col-6 mx-auto">
		{% include 'include/_flashes.html.twig' %}
	</div>

	<div class="col-8 mx-auto">

		{{ form_start(form) }}

		<div class="row">
			<div class="col-6">{{ form_row(form.nom) }}</div>
			<div class="col-6">{{ form_row(form.prenom) }}</div>
			<div>{{ form_row(form.email) }}</div>
			<div>{{ form_row(form.message) }}</div>
		</div>

		{{ form_row(form.submit) }}

		{{form_end(form)}}

	</div>

{% endblock %}
