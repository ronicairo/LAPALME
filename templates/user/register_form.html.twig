{% extends 'base.html.twig' %}

{% block title %}Dashboard utilisateurs{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-6 mx-auto">
            {% include 'include/_flashes.html.twig' %}
        </div>
    </div>
	
	<h3 class="text-center my-4 text-white">
		Ajouter un administrateur</h3>

	<div class="row">
		<div class="col-8 mx-auto">

			{{form_start(form)}}

			<div
				class="row">
				{# <div class="col-6">{{ form_row(form.roles) }}</div> #}

				<div class="col-6">{{form_row(form.lastname)}}</div>
				<div class="col-6">{{form_row(form.firstname)}}</div>
			</div>
            
			<div class="row">
				<div class="col-6">{{form_row(form.email)}}</div>
				<div class="col-6">{{form_row(form.password)}}</div>
			</div>

			{{form_end(form)}}
		</div>
	</div>

{% endblock %}
